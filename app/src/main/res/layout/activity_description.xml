<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ghibli_movie"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/movie_picture"
                android:layout_width="142dp"
                android:layout_height="205dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/exmaple_mp" />

                <TextView
                    android:id="@+id/m_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/movie_picture"
                    android:layout_toRightOf="@+id/movie_picture"
                    android:text="@string/title"
                    android:textColor="#F4F1F1"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/m_title"
                    android:layout_toRightOf="@+id/m_title"
                    android:gravity="center"
                    android:singleLine="false"
                    android:textColor="#F4F1F1"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />
                <TextView
                    android:id="@+id/m_director"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/m_title"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/movie_picture"
                    android:layout_toRightOf="@+id/movie_picture"
                    android:text="@string/director"
                    android:textColor="#F4F1F1"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/director"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/m_title"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/m_director"
                    android:layout_toRightOf="@+id/m_director"
                    android:gravity="start"
                    android:singleLine="false"
                    android:textColor="#F4F1F1"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/m_producer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/m_director"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/movie_picture"
                    android:layout_toRightOf="@+id/movie_picture"
                    android:text="@string/producer"
                    android:textColor="#F4F1F1"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/producer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/m_director"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/m_producer"
                    android:layout_toRightOf="@+id/m_producer"
                    android:singleLine="false"
                    android:textColor="#F4F1F1"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/m_composer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/m_producer"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/movie_picture"
                    android:layout_toRightOf="@+id/movie_picture"
                    android:text="@string/composer"
                    android:textColor="#F4F1F1"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/composer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/m_producer"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/m_composer"
                    android:layout_toRightOf="@+id/m_composer"
                    android:singleLine="false"
                    android:textColor="#F4F1F1"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/m_running_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/m_composer"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/movie_picture"
                    android:layout_toRightOf="@+id/movie_picture"
                    android:text="@string/running_time"
                    android:textColor="#F4F1F1"
                    android:textSize="14sp"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/running_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/m_composer"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/m_running_time"
                    android:layout_toRightOf="@+id/m_running_time"
                    android:textColor="#F4F1F1"
                    android:textSize="14sp">
                </TextView>

                <TextView
                    android:id="@+id/m_rt_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/m_running_time"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/movie_picture"
                    android:layout_toRightOf="@+id/movie_picture"
                    android:text="@string/rt_score"
                    android:textColor="#F4F1F1"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rt_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/m_running_time"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/m_rt_score"
                    android:layout_toRightOf="@+id/m_rt_score"
                    android:textColor="#F4F1F1"
                    android:textSize="14sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                android:textColor="#F4F1F1" />

            <TextView
                android:id="@+id/m_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/description"
                android:textStyle="bold"
                android:textColor="#F4F1F1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:textColor="#F4F1F1"
                android:gravity="center_horizontal|top"
                android:singleLine="false"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/m_movie_trailer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/trailer"
                android:textStyle="bold"
                android:textColor="#F4F1F1"
                android:textSize="16sp" />

            <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/movie_trailer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:background="#000000"/>

            <ImageButton
                android:id="@+id/character_button"
                android:onClick="touchCharacterButton"
                android:layout_width="236dp"
                android:layout_height="56dp"
                android:background="@drawable/characters_csn"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:contentDescription="@string/todo" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>